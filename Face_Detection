from xml.etree.ElementInclude import FatalIncludeError
from cv2 import minEnclosingCircle

from matplotlib.pyplot import sca
import cv2
import numpy

case_path = cv2.data.haarcascades + "haarcascade_frontalface_default.xml"
faceDetected = cv2.CascadeClassifier(case_path)

image = cv2.imread('pic\\pic10.jpg')
image_face = faceDetected.detectMultiScale(image, scaleFactor = 1.1, minNeighbors = 5, minSize = (30, 30), flags = cv2.CASCADE_SCALE_IMAGE)

for(x, y, w, h) in image_face:
    cv2.rectangle(image, (x, y), (x+w, y+h),(128, 255 , 0), 2)

cv2.imshow("Facedetected", image)
cv2.waitKey(0)
cv2.destroyAllWindows()
